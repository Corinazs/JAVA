public class Rechnung {

	double betrag;
	double rabatt;
  
  //Verweis auf Objekt "Kunde"
	private Kunde rechnungsempfaenger;
	
  int anzahl = 0;
	double preis;
	
	public void legeRabattFest(double neuerRabatt) {
		rabatt = neuerRabatt;
	}
	
	public double berechneNettopreis() {
		betrag = betrag - rabatt;
		
		return betrag;
	}
	
	public void gebeAus() {
		System.out.println("An: ");
		System.out.println(rechnungsempfaenger.liefereName());
		System.out.println(rechnungsempfaenger.liefereAnschrift());
		System.out.println("Netto: " + berechneNettopreis());
	}
	
		public static void main(String[] args) {
		Kunde k1 = new Kunde("Corina", "zsads");
		Kunde k2 = new Kunde("Schnikado", "iaodhus");
		
		Rechnung a = new Rechnung();
		a.rechnungsempfaenger = k1;
		Rechnung b = new Rechnung();
		
		b.rechnungsempfaenger = k1;
		
		System.out.println(a.rechnungsempfaenger.liefereName());
		System.out.println(b.rechnungsempfaenger.liefereName());
		
	}
	
}
	
